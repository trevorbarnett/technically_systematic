{
  "cache": {
    "module": "lib.cache.local",
    "classname": "LocalCache",
    "params": {
      "cache_dir": "test/cache"
    }
  },
  "data_loaders": {
    "price_series": {
      "module": "lib.data.parquet_loader",
      "class_name": "ParquetLoader",
      "datetime_column": "datetime",
      "required_columns": ["datetime","asset","open","high","low","close","volume"],
      "datetime_granularity": "1 minute",
      "params": {
        "file_path": "test/data/prices.parq"
      }
    }
  },
  "dask": {
    "enaled": true,
    "scheduler": "threads",
    "num_workers": 4
  },
  "signals_manifest": [
    {
      "module": "lib.signals.momentum",
      "class_name": "MomentumSignal"
    },
    {
      "module": "lib.signals.reversion",
      "class_name": "ReversionSignal"
    },
    {
      "module": "lib.signals.volatility",
      "class_name": "VolatilitySignal"
    },
    {
      "module": "lib.signals.covariance",
      "class_name": "CovarianceSignal"
    }
  ],
  "signals": [
    {
      "name": "MomentumSignal",
      "output_name": "momentum_60",
      "params": {"window": 60},
      "dependencies": []
    },
    {
      "name": "ReversionSignal",
      "output_name": "reversion_5_60",
      "params": {"short_window": 5, "long_window": 60},
      "dependencies": ["momentum_60"]
    },
    {
      "name": "VolatilitySignal",
      "output_name": "volatility_30",
      "params": {"window": 30},
      "dependencies": ["momentum_60"]
    },
    {
      "name": "CovarianceSignal",
      "output_name": "cov_matrix_30",
      "params": {"window": 30},
      "dependencies": []
    }
  ],
  "output_series": [
    "momentum_60",
    "reversion_5_60"
  ]
}
